<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_pub_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:orientation="vertical"
    app:cardCornerRadius="3dp"
    app:elevation="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/iv_item_image"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/iv_cyc_bg3"
            />

        <RelativeLayout
            android:id="@+id/rlt_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="95dp"
            >

            <View
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="#99333333"
                />

            <TextView
                android:id="@+id/tv_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:text="this is a title"
                android:textColor="#FFF"
                android:textSize="20sp"
                />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rlt_item_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rlt_item_title"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            >

            <View
                android:id="@+id/view_line"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#fff"/>

            <View
                android:id="@+id/view_content_bg"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/view_line"
                android:background="@color/colorBg"
                />

            <TextView
                android:id="@+id/tv_item_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:maxLines="2"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Hankins is an android deleoper , his app always be designed pretty .Love Google"
                android:textColor="#FFF"
                android:textSize="15sp"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlt_item_end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rlt_item_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            >

            <View
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@color/colorDark9"
                />

            <RelativeLayout
                android:id="@+id/rlt_item_headImage"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                >

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="5dp"
                    android:src="@mipmap/ic_head"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlt_item_user"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_toRightOf="@id/rlt_item_headImage"
                >

                <TextView
                    android:id="@+id/tv_item_userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="hankins"
                    android:textColor="#FFF"
                    android:textSize="18sp"
                    />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rlt_item_time"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_toEndOf="@id/rlt_item_user"
                android:layout_marginLeft="5dp"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_centerInParent="true"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"
                    android:src="@mipmap/ic_time"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlt_item_date"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_toEndOf="@id/rlt_item_time"
                >
                <TextView
                    android:id="@+id/tv_pub_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="#FFF"
                    android:textSize="16sp"
                    android:text="02-21"
                    />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rlt_item_love"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:src="@mipmap/ic_love"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlt_item_chat"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_toStartOf="@id/rlt_item_love"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:src="@mipmap/ic_chat"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlt_item_pin"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_toStartOf="@id/rlt_item_chat"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:src="@mipmap/iv_pin"
                    />

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>
