<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorBg"
        app:navigationIcon="?attr/homeAsUpIndicator"
        app:popupTheme="?attr/popupTheme"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Publish"
            android:textColor="#FFF"
            android:textSize="20sp"
            />

        <ImageView
            android:id="@+id/iv_pub_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:src="@mipmap/iv_send"
            />

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="60dp"
        >

        <TextView
            android:id="@+id/tv_write_length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="0"
            android:textColor="#FFF"
            android:textSize="15sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_write_length"
            android:text="字"
            android:textColor="#FFF"
            android:textSize="15sp"
            />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rlt_pub_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/toolbar"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        >

        <EditText
            android:id="@+id/edt_pub_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:background="@null"
            android:hint="请输入标题"
            android:inputType="textMultiLine"
            android:maxLength="30"
            android:textColor="#99111111"
            android:textColorHint="#55333333"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="22sp"
            android:typeface="normal"
            />
    </RelativeLayout>


    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="3sp"
        android:layout_below="@id/rlt_pub_title"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@mipmap/iv_line"
        />

    <spr.dev.view.MyScrollView
        android:id="@+id/scroll_pub_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_line"
        android:layout_marginTop="10dp"
        >

        <EditText
            android:id="@+id/edt_pub_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@null"
            android:hint="请输入正文"
            android:imeOptions="actionDone"
            android:inputType="textMultiLine"
            android:lineSpacingMultiplier="1.2"
            android:textColor="#99000000"
            android:textColorHint="#55333333"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textScaleX="1.1"
            android:textSize="18sp"
            />

    </spr.dev.view.MyScrollView>


    <RelativeLayout
        android:id="@+id/rlt_gridImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/scroll_pub_content"
        android:layout_marginTop="20dp"
        >

        <GridView
            android:id="@+id/noScrollGridView"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:horizontalSpacing="5dp"
            android:numColumns="3"
            android:scrollbars="none"
            >
        </GridView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlt_pub_add"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorBg"
        >

        <RelativeLayout
            android:id="@+id/rlt_add_iv_photo"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/iv_add_image"
                />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rlt_add_iv_camera"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_toStartOf="@id/rlt_add_iv_photo"
            >

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/iv_camera"
                />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>






















